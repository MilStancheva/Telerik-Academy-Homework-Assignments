<div id="container-thraeds" class="col-xs-4">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3 class="panel-title">Threads</h3>
        </div>
        <div id="threads" class="panel-body">
            {{#each result}}
            <div class="thread">
                <div><h3><a class="thread-title" href='#/threads/{{this.id}}'>{{this.title}}</a></h3></div>
                    <div>
                        <p>
                            <span>Created on</span>{{#if postDate}}{{this.postDate}}{{else}} unknown{{/if}}<span class="thread-date"></span>
                            by <a class="thread-creator" href='#/users/'>{{#if username}}{{username}}{{else}} anonymous{{/if}}</a>
                        </p>
                    </div>
                </div>
            {{/each}}

            <form class="navbar-form navbar-left" role="search">
                <h4>Create new Thread:</h4>
                <div class="input-group">
                <input id="input-add-thread" class="thread-title form-control" placeholder="Thread Title" />
                <span class="input-group-btn">
                <a href="#/threads" id="btn-add-thread" class="btn btn-success" type="submit">Add</a>
                </span>
                </div>
            </form>
        </div>
      </div>
    </div>